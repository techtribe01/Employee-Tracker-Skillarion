# Production Environment Configuration Example

# Supabase (Production)
NEXT_PUBLIC_SUPABASE_URL=your_prod_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_prod_supabase_key
SUPABASE_SERVICE_ROLE_KEY=your_prod_service_role_key

# Application
NEXT_PUBLIC_APP_URL=https://app.skillariondevelopement.in
NODE_ENV=production
LOG_LEVEL=info

# Email Service
SENDGRID_API_KEY=your_prod_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@skillariondevelopement.in

# SMS Gateway
TWILIO_ACCOUNT_SID=your_prod_twilio_sid
TWILIO_AUTH_TOKEN=your_prod_twilio_token
TWILIO_PHONE_NUMBER=+1xxxxxxxxxx

# Security
NEXTAUTH_SECRET=your_secure_random_string_32_chars_min
CSRF_SECRET=your_csrf_secret
JWT_SECRET=your_jwt_secret

# Analytics
NEXT_PUBLIC_ANALYTICS_ID=your_prod_analytics_id

# Monitoring
SENTRY_DSN=your_sentry_dsn
DATADOG_API_KEY=your_datadog_key

# Feature Flags
ENABLE_GPS_TRACKING=true
ENABLE_2FA=true
ENABLE_NOTIFICATIONS=true
ENABLE_ADVANCED_ANALYTICS=true

# Database
DATABASE_URL=your_prod_database_url
REDIS_URL=your_redis_url

# File Storage
AWS_S3_BUCKET=your_s3_bucket
AWS_S3_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
